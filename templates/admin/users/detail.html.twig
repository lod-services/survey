{% extends 'base.html.twig' %}

{% block title %}User: {{ user.username }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>ðŸ‘¤ User: {{ user.username }}</h1>
                <div>
                    <a href="{{ path('admin_users') }}" class="btn btn-outline-secondary">Back to Users</a>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5>User Information</h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-borderless">
                                <tr>
                                    <th>ID:</th>
                                    <td>{{ user.id }}</td>
                                </tr>
                                <tr>
                                    <th>Username:</th>
                                    <td>{{ user.username }}</td>
                                </tr>
                                <tr>
                                    <th>Email:</th>
                                    <td>{{ user.email }}</td>
                                </tr>
                                <tr>
                                    <th>Status:</th>
                                    <td>
                                        {% if user.isActive %}
                                            <span class="badge bg-success">Active</span>
                                        {% else %}
                                            <span class="badge bg-danger">Inactive</span>
                                        {% endif %}
                                        {% if user.isVerified %}
                                            <span class="badge bg-info">Verified</span>
                                        {% else %}
                                            <span class="badge bg-warning">Unverified</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Registered:</th>
                                    <td>{{ user.createdAt|date('Y-m-d H:i:s') }}</td>
                                </tr>
                                <tr>
                                    <th>Last Updated:</th>
                                    <td>{{ user.updatedAt|date('Y-m-d H:i:s') }}</td>
                                </tr>
                                <tr>
                                    <th>Last Login:</th>
                                    <td>
                                        {% if user.lastLogin %}
                                            {{ user.lastLogin|date('Y-m-d H:i:s') }}
                                        {% else %}
                                            <em>Never logged in</em>
                                        {% endif %}
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5>Role Management</h5>
                        </div>
                        <div class="card-body">
                            <form method="post" action="{{ path('admin_user_roles', {'id': user.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('update_user_roles') }}" />
                                <div class="mb-3">
                                    <label class="form-label">Current Roles:</label>
                                    {% for role in user.roles %}
                                        <div>
                                            <span class="badge bg-secondary me-2">{{ role }}</span>
                                            {% if available_roles[role] is defined %}
                                                <small class="text-muted">{{ available_roles[role] }}</small>
                                            {% endif %}
                                        </div>
                                    {% endfor %}
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Assign Roles:</label>
                                    {% for role, description in available_roles %}
                                        <div class="form-check">
                                            <input 
                                                class="form-check-input" 
                                                type="checkbox" 
                                                name="roles[]" 
                                                value="{{ role }}" 
                                                id="role_{{ role }}"
                                                {% if user.hasRole(role) %}checked{% endif %}
                                                {% if role == 'ROLE_USER' %}disabled{% endif %}
                                            >
                                            <label class="form-check-label" for="role_{{ role }}">
                                                {{ description }}
                                                {% if role == 'ROLE_USER' %}
                                                    <small class="text-muted">(Required)</small>
                                                {% endif %}
                                            </label>
                                        </div>
                                    {% endfor %}
                                </div>

                                {% if app.user != user %}
                                    <button type="submit" class="btn btn-primary">Update Roles</button>
                                {% else %}
                                    <p class="text-warning"><small>You cannot modify your own roles.</small></p>
                                {% endif %}
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5>Account Actions</h5>
                        </div>
                        <div class="card-body">
                            {% if app.user != user %}
                                {% if user.isActive %}
                                    <form method="post" action="{{ path('admin_user_deactivate', {'id': user.id}) }}" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('deactivate_user') }}" />
                                        <button type="submit" class="btn btn-warning" onclick="return confirm('Are you sure you want to deactivate this user?')">
                                            Deactivate User
                                        </button>
                                    </form>
                                {% else %}
                                    <form method="post" action="{{ path('admin_user_activate', {'id': user.id}) }}" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('activate_user') }}" />
                                        <button type="submit" class="btn btn-success">
                                            Activate User
                                        </button>
                                    </form>
                                {% endif %}
                            {% else %}
                                <p class="text-warning">You cannot deactivate your own account.</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}