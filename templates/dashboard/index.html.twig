{% extends 'base.html.twig' %}

{% block title %}Survey Dashboard{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center py-4">
        <div>
            <h1 class="h2 mb-1">Smart Survey Template Ecosystem</h1>
            <p class="text-muted">Create professional surveys with industry-specific templates</p>
        </div>
        <div>
            <a href="{{ path('template_library') }}" class="btn btn-primary">
                <i class="bi bi-collection"></i> Browse Templates
            </a>
        </div>
    </div>

    <!-- Feature Overview -->
    <div class="row mb-5">
        <div class="col-lg-4 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="bg-primary bg-opacity-10 rounded-circle p-3 d-inline-block mb-3">
                        <i class="bi bi-collection-fill text-primary" style="font-size: 2rem;"></i>
                    </div>
                    <h5>Template Library</h5>
                    <p class="text-muted">Access {{ popularTemplates|length }}+ professionally designed templates across multiple industries</p>
                    <a href="{{ path('template_library') }}" class="btn btn-outline-primary">Browse Library</a>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="bg-success bg-opacity-10 rounded-circle p-3 d-inline-block mb-3">
                        <i class="bi bi-lightning-fill text-success" style="font-size: 2rem;"></i>
                    </div>
                    <h5>One-Click Deploy</h5>
                    <p class="text-muted">Deploy templates instantly with customization and automated branding</p>
                    <a href="{{ path('template_library') }}" class="btn btn-outline-success">Get Started</a>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="bg-warning bg-opacity-10 rounded-circle p-3 d-inline-block mb-3">
                        <i class="bi bi-shield-check-fill text-warning" style="font-size: 2rem;"></i>
                    </div>
                    <h5>Compliance Ready</h5>
                    <p class="text-muted">Templates include GDPR, HIPAA, and SOX compliance elements automatically</p>
                    <a href="{{ path('template_library', {industry: 'Healthcare'}) }}" class="btn btn-outline-warning">View Compliant Templates</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Popular Templates -->
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3>Most Popular Templates</h3>
                <a href="{{ path('template_library', {orderBy: 'popularity'}) }}" class="btn btn-outline-primary">View All</a>
            </div>
            
            <div class="row">
                {% for template in popularTemplates %}
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h5 class="card-title">{{ template.name }}</h5>
                                    {% if template.averageRating %}
                                        <div class="text-warning">
                                            {% for i in 1..5 %}
                                                <i class="bi bi-star{{ template.averageRating >= i ? '-fill' : '' }}"></i>
                                            {% endfor %}
                                            <small class="text-muted ms-1">({{ template.averageRating|round(1) }})</small>
                                        </div>
                                    {% endif %}
                                </div>
                                
                                <div class="mb-3">
                                    <span class="badge bg-primary me-1">{{ template.industry }}</span>
                                    <span class="badge bg-secondary">{{ template.category }}</span>
                                </div>
                                
                                <p class="card-text text-muted small">{{ template.description[:100] }}{{ template.description|length > 100 ? '...' : '' }}</p>
                                
                                <div class="d-flex justify-content-between text-muted small mb-3">
                                    <span><i class="bi bi-people"></i> {{ template.usageCount }} uses</span>
                                    <span><i class="bi bi-clock"></i> ~{{ template.metadata.estimatedTime ?? 5 }}min</span>
                                </div>
                                
                                {% if template.complianceFlags %}
                                    <div class="mb-3">
                                        <small class="text-success">
                                            <i class="bi bi-shield-check"></i> 
                                            {{ template.complianceFlags|join(', ') }}
                                        </small>
                                    </div>
                                {% endif %}
                            </div>
                            
                            <div class="card-footer bg-transparent border-top-0">
                                <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                                    <a href="{{ path('template_preview', {id: template.id}) }}" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye"></i> Preview
                                    </a>
                                    <a href="{{ path('template_deploy_form', {id: template.id}) }}" class="btn btn-primary btn-sm">
                                        <i class="bi bi-download"></i> Deploy
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- Industry Quick Access -->
    <div class="row mt-5">
        <div class="col-12">
            <h3 class="mb-4">Browse by Industry</h3>
            <div class="row">
                {% for industry in industries %}
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
                        <a href="{{ path('template_library', {industry: industry}) }}" class="text-decoration-none">
                            <div class="card border-0 bg-light h-100 text-center p-3 hover-shadow">
                                <div class="card-body">
                                    <i class="bi bi-briefcase-fill text-primary mb-2" style="font-size: 2rem;"></i>
                                    <h6 class="text-dark">{{ industry }}</h6>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .hover-shadow:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
            transform: translateY(-2px);
            transition: all 0.3s ease;
        }
    </style>
{% endblock %}