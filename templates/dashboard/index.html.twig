{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Welcome, {{ user.username }}!</h1>
                <div>
                    <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">Logout</a>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Account Information</h5>
                            <p class="card-text">
                                <strong>Username:</strong> {{ user.username }}<br>
                                <strong>Email:</strong> {{ user.email }}<br>
                                <strong>Roles:</strong> 
                                {% for role in user.roles %}
                                    <span class="badge bg-secondary">{{ role }}</span>
                                {% endfor %}<br>
                                <strong>Member since:</strong> {{ user.createdAt|date('Y-m-d') }}
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Quick Actions</h5>
                            
                            {% if user.canCreateSurveys %}
                                <div class="mb-3">
                                    <h6>Survey Management</h6>
                                    <a href="#" class="btn btn-primary me-2">Create New Survey</a>
                                    <a href="#" class="btn btn-outline-primary">Manage Surveys</a>
                                </div>
                            {% endif %}

                            {% if user.isAdmin %}
                                <div class="mb-3">
                                    <h6>Administration</h6>
                                    <a href="#" class="btn btn-warning me-2">Admin Panel</a>
                                    <a href="#" class="btn btn-outline-warning">User Management</a>
                                </div>
                            {% endif %}

                            <div class="mb-3">
                                <h6>Account Settings</h6>
                                <a href="#" class="btn btn-outline-secondary me-2">Edit Profile</a>
                                <a href="#" class="btn btn-outline-secondary">Change Password</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Recent Activity</h5>
                            <p class="text-muted">No recent activity to display.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}